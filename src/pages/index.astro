---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body {
				background: var(--bg-color);
				margin: 0;
				padding: 0;
				transition: background-color 0.2s ease, color 0.2s ease;
			}
			
			/* 文章列表容器 */
			.post-list-container {
				max-width: 800px;
				margin: 0 auto;
				padding: 4rem 2rem 8rem 2rem;
			}
			
			@media (max-width: 768px) {
				.post-list-container {
					padding-left: 1rem;
					padding-right: 1rem;
				}
			}
			
			.post-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			
			.post-item {
				margin-bottom: 4rem;
			}
			
			.post-item a {
				text-decoration: none;
				color: inherit;
				display: block;
				min-width: 0 !important;
				width: 100%;
				max-width: 100%;
				box-sizing: border-box;
			}
			
			/* 封面图 */
			.post-hero-image {
				width: 100%;
				margin-bottom: 1rem;
			}
			
			.post-hero-image img {
				display: block;
				width: 100%;
				height: auto;
				object-fit: cover;
			}
			
			/* 文章标题 */
			.post-title {
				font-size: 2.25rem;
				font-weight: 700;
				color: #6366f1;
				background-image: none;
				-webkit-text-fill-color: initial;
				background-clip: border-box;
				margin: 0 0 0.5rem 0;
				line-height: 1.3;
				transition: color 0.2s ease;
				/* 强制换行修复 */
				min-width: 0 !important;
				white-space: normal !important;
				word-wrap: break-word !important;
				word-break: break-word !important;
				overflow-wrap: anywhere !important;
				max-width: 100% !important;
				box-sizing: border-box;
			}
			
			.post-item a:hover .post-title {
				color: #4f46e5;
			}
			
			/* 响应式设计 */
			@media (max-width: 768px) {
				.post-list-container {
					padding: 3rem 1rem 6rem 1rem;
				}
				
				.post-item a {
					/* 移动端额外强制修复 */
					min-width: 0 !important;
					max-width: 100% !important;
					overflow: hidden;
				}
				
				.post-title {
					font-size: 1.5rem;
					/* 移动端再次强化换行 */
					min-width: 0 !important;
					white-space: normal !important;
					word-wrap: break-word !important;
					overflow-wrap: anywhere !important;
					max-width: 100% !important;
				}
				
				.post-item {
					margin-bottom: 3rem;
					/* 确保列表项本身不超出容器 */
					max-width: 100%;
					overflow: hidden;
				}
			}
			
			@media (max-width: 480px) {
				.post-list-container {
					padding: 2rem 1rem 4rem 1rem;
				}
				
				.post-title {
					font-size: 1.5rem;
				}
			}
			
			/* ========================================
			   强制性移动端文字溢出修复 (max-width: 720px)
			   覆盖所有可能的布局冲突
			======================================== */
			@media (max-width: 720px) {
				/* 1. 强制限制所有文章容器的宽度 */
				.post-list,
				.post-list li,
				.post-item,
				.post-item a {
					width: 100% !important;
					max-width: 100vw !important;
					box-sizing: border-box !important;
					overflow-x: hidden !important; /* 禁止横向溢出 */
				}
				
				/* 2. 强制文字换行，不许抵抗 */
				.post-title,
				.post-item p,
				.post-item h2,
				.post-item h4 {
					white-space: normal !important;
					overflow-wrap: anywhere !important; /* 最强换行逻辑 */
					word-break: break-word !important;
					word-wrap: break-word !important;
					min-width: 0 !important; /* 解锁 Flex 收缩 */
					max-width: 100% !important;
					box-sizing: border-box !important;
					padding-right: 0.5rem !important; /* 留一点呼吸空间 */
				}
				
				/* 3. 确保父容器不溢出 */
				.post-list-container {
					max-width: 100vw !important;
					overflow-x: hidden !important;
					box-sizing: border-box !important;
				}
				
				/* 4. 防止 body 和 html 横向滚动 */
				body,
				html {
					overflow-x: hidden !important;
					max-width: 100vw !important;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- 文章列表 -->
		<main class="post-list-container">
			<ul class="post-list">
				{
					posts.map((post) => (
						<li class="post-item">
							<a href={`/blog/${post.id}/`}>
								{post.data.heroImage && (
									<div class="post-hero-image">
										<Image width={800} height={400} src={post.data.heroImage} alt="" />
									</div>
								)}
								<h2 class="post-title">{post.data.title}</h2>
							</a>
						</li>
					))
				}
			</ul>
		</main>
		
		<Footer />
	</body>
</html>
